<Window x:Class="XamlCruncher.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        SizeToContent="WidthAndHeight"
        Title="MessageDialog" Height="300" Width="300" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" WindowStyle="ToolWindow">
    <Grid Margin="10">

        <TextBlock x:Name="message" HorizontalAlignment="Center" Text="メッセージ" />
        <StackPanel x:Name="body" Orientation="Horizontal" Margin="0, 30,0,0">
        </StackPanel>
    </Grid>
</Window>
