<Window x:Class="HowToAsync2.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HowToAsync2"
        mc:Ignorable="d"
        Title="MessageDialog" Height="180" Width="370"
        WindowStyle="ToolWindow" ShowInTaskbar="False">
    <Grid Margin="10">
        <TextBlock x:Name="message" HorizontalAlignment="Center" Text="メッセージ"/>
        <StackPanel x:Name="body" Orientation="Horizontal" Margin="0, 30, 0, 0">
        </StackPanel>
    </Grid>
</Window>
